<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.eclipse.jetty" level="DEBUG"/>
    <logger name="io.netty" level="DEBUG"/>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="ERROR"/>
    <logger name="com.zaxxer.hikari.pool.PoolBase" level="ERROR"/>
    <logger name="com.zaxxer.hikari.HikariConfig" level="ERROR"/>
    <logger name="org.apache.http" level="DEBUG"/>
    <logger name="io.ktor.client" level="DEBUG"/>
    <logger name="io.ktor.auth.jwt" level="DEBUG"/>
    <logger name="Exposed" level="ERROR"/>
    <logger name="GitClient" level="DEBUG"/>
    <logger name="o.e.j.i.storage.file.FileSnapshot" level="ERROR"/>
    <logger name="com.tombspawn.skeleton.ApplicationService" level="DEBUG"/>
    <logger name="com.tombspawn.base.network.Common" level="DEBUG"/>
    <logger name="com.tombspawn.skeleton.gradle.GradleExecutor" level="DEBUG"/>
    <logger name="com.tombspawn.skeleton.git.GitClient" level="DEBUG"/>
    <logger name="com.tombspawn.skeleton.commandline.CommandLineClient" level="DEBUG"/>

</configuration>
